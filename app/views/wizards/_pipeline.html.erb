
<div id='wizard' class="wizard" data-state=<%= @state %>
    <%- if @batch %>
        data-step=<%= @batch.step %> data-status=<%= @batch.status %> data-batch_state_path=<%= batch_state_path(@batch) %>
    <% end %>
>
	<% case @state %>
	<% when :start %>
		<%# Select Genes button is highlighted %>
		<a href=<%= start_path %> class="current"><span class="badge badge-inverse">1</span>Start</a>
		<a href=<%= select_path %> class="ready"><span class="badge badge-inverse">2</span>Select Genes</a>
		<a href="#" class="unready lookup-sequence"><span class="badge">3</span>Lookup Sequence</a>
		<a href="#" class="unready"><span class="badge">4</span>Configure</a>
		<a href="#" class="unready"><span class="badge">5</span>Primer 3</a>
		<a href="#" class="unready"><span class="badge">6</span>Assay Review</a>
	<% when :select %>
		<a href=<%= start_path %> class="done"><span class="badge badge-inverse">1</span>Start</a>
		<a href=<%= select_path %> class="current"><span class="badge badge-inverse">2</span>Select Genes</a>
		<a href="#" class="unready lookup-sequence"><span class="badge">3</span>Lookup Sequence</a>
		<a href="#" class="unready"><span class="badge">4</span>Configure</a>
		<a href="#" class="unready"><span class="badge">5</span>Primer 3</a>
		<a href="#" class="unready"><span class="badge">6</span>Assay Review</a>
	<% when :locate %>
		<a href=<%= start_path %> class="done"><span class="badge badge-inverse">1</span>Start</a>
		<a href=<%= select_path %> class="done"><span class="badge badge-inverse">2</span>Select Genes</a>
		<a href=<%= batches_path(@batch_num) %> class="processing"><span class="badge badge-inverse">3</span>Lookup Sequence</a>
		<a href="#" class="unready"><span class="badge">4</span>Configure</a>
		<a href="#" class="unready"><span class="badge">5</span>Primer 3</a>
		<a href="#" class="unready"><span class="badge">6</span>Assay Review</a>
	<% when :configure %>
		<a href=<%= start_path %> class="done"><span class="badge badge-inverse">1</span>Start</a>
		<a href=<%= select_path %> class="done"><span class="badge badge-inverse">2</span>Select Genes</a>
		<a href=<%= batches_path(@batch_num) %> class="done lookup-sequence"><span class="badge badge-inverse">3</span>Lookup Sequence</a>
		<a href=<%= batches_path %> class="current"><span class="badge badge-inverse">4</span>Configure</a>
		<a href=<%= primer3_btn_path(@batch_num) %> class="ready"><span class="badge">5</span>Primer 3</a>
		<a href="#" class="unready"><span class="badge">6</span>Assay Review</a>
	<% when :primer3 %>
		<a href=<%= start_path %> class="done"><span class="badge badge-inverse">1</span>Start</a>
		<a href=<%= select_path %> class="done"><span class="badge badge-inverse">2</span>Select Genes</a>
		<a href=<%= configure_path(@batch_num) %> class="done lookup-sequence"><span class="badge badge-inverse">3</span>Lookup Sequence</a>
		<a href=<%= configure_path(@batch_num) %> class="done"><span class="badge badge-inverse">4</span>Configure</a>
		<a href=<%= configure_path(@batch_num) %> class="processing"><span class="badge badge-inverse">5</span>Primer 3</a>
		<a href="#" class="unready"><span class="badge">6</span>Assay Review</a>
	<% when :assay %>
		<a href=<%= start_path %> class="done"><span class="badge badge-inverse">1</span>Start</a>
		<a href=<%= select_path %> class="done"><span class="badge badge-inverse">2</span>Select Genes</a>
		<a href=<%= configure_path(@batch_num) %> class="done lookup-sequence"><span class="badge badge-inverse">3</span>Lookup Sequence</a>
		<a href=<%= batches_path(@batch_num) %> class="done"><span class="badge badge-inverse">4</span>Configure</a>
		<a href="#" class="done"><span class="badge badge-inverse">5</span>Primer 3</a>
		<a href=<%= assay_path(@batch_num) %> class="current"><span class="badge badge-inverse">6</span>Assay Review</a>
	<% end %>
</div>
