<div id="signUpModal" class="modal hide" tabindex="-1">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Sign Up</h3>
  </div>
  <%= simple_form_for(User.new, :url => user_registration_path, :html => {:class => 'form-vertical' }) do |f| %>
    <div class="modal-body">
        <%= f.input :name, :autofocus => true %>
        <%= f.input :email, :required => true %>
        <%= f.input :password, :required => true %>
        <%= f.input :password_confirmation, :required => true %>
    </div>
    <div class="modal-footer">
      <button type="button" data-dismiss="modal" class="btn">Close</button>
      <%= f.button :submit, 'Sign up', :class => 'btn-primary' %>
    </div>
  <% end %>
</div>

<div id="signInModal" class="modal hide" tabindex="-1">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3>Sign In</h3>
  </div>
  <%= simple_form_for(User.new, :url => user_session_path, :html => {:class => 'form-vertical' }) do |f| %>
    <div class="modal-body">
        <%= f.input :email, :autofocus => true %>
        <%= f.input :password %>
        <%= f.input :remember_me, :as => :boolean %>
    </div>
    <div class="modal-footer">
      <button type="button" data-dismiss="modal" class="btn">Close</button>
      <%= f.button :submit, "Sign in", :class => 'btn-primary' %>
    </div>
  <% end %>
</div>