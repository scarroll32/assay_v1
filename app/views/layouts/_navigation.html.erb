<%= link_to "Assay Pipeline", root_path, :class => 'brand' %>


<% if user_signed_in? %>
  <ul class="nav pull-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        <%= current_user.name %>
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'Profile', edit_user_registration_path %></li>
        <% if current_user.has_role? :admin %>
        <li class="divider"></li>
        <li><%= link_to 'Users', users_path %></li>
        <li><%= link_to 'Monitor', '/monitor' %></li>
        <% end %>
        <li class="divider"></li>
        <li><%= link_to 'Logout', destroy_user_session_path, :method=>'delete' %></li>
      </ul>
    </li><%# dropdown %>
  </ul>

  <ul class="nav pull-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        Settings
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><%= link_to 'Primer 3', primer3_settings_path %></li>
      </ul>
    </li>
  </ul>
<% else %>
  <ul class="nav pull-right">
    <li class="dropdown">
      <a href="#" class="dropdown-toggle" data-toggle="dropdown">
        Members
        <b class="caret"></b>
      </a>
      <ul class="dropdown-menu">
        <li><a href="#signInModal" data-toggle="modal">Login</a></li>
        <li><a href="#signUpModal" data-toggle="modal">Sign Up</a></li>
      </ul>
    </li>
  </ul>
<% end %>


